<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "flex items-center justify-center" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="w-3/4 lg:w-1/2 flex items-center justify-center flex-col bg-slate-400  rounded-xl pt-6 pb-6">
  <div class="w-1/2 flex items-center justify-center flex-col">
    <%= f.label :email, style: "display: block" %><br />
    <%= f.email_field :email, class: "rounded-xl mb-8 flex flex-col", autofocus: true, autocomplete: "email" %>
  </div>

  <%= render "partials/forms/text_input", f: f, field: :username %>

  <div class="w-1/2 flex items-center justify-center flex-col">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: "rounded-xl mb-8 flex flex-col", autocomplete: "new-password" %>
  </div>

  <div class="w-1/2 flex items-center justify-center flex-col">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: "rounded-xl mb-8 flex flex-col", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "cursor-pointer text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
  </div>
  </div>

<% end %>

<%= render "devise/shared/links" %>
